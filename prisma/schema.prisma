// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongodb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User_info {
  id           String         @id @default(auto()) @map("_id") @db.ObjectId
  email        String         @unique
  username     String         @unique
  password     String
  registeredAt DateTime
  portfolio    Portfolio_info @relation(fields: [id], references: [id])
}

model Portfolio_info {
  id             String           @id @default(auto()) @map("_id") @db.ObjectId
  portfolioInfo  PortfolioInfo[]
  education      Education[]
  workExperience WorkExperience[]
  project        Project[]
  skill          Skill[]
  template       Template[]
  user           User_info[]
}

model Template_info {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  url       String
  createdAt DateTime
  updateAt  DateTime
}

model Skill_info {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  logo_url String
}

type PortfolioInfo {
  portfolioName  String
  titleName      String
  profilePicture String
  createdAt      DateTime
  updatedAt      DateTime
}

type Education {
  school    String
  degree    String
  major     String
  startDate DateTime
  endDate   DateTime
}

type WorkExperience {
  position        String
  employeeType    String
  companyName     String
  companyLocation String
  startDate       DateTime
  endDate         DateTime
}

type Project {
  title       String
  detail      String
  picture     String
  gategory    String
  tag         String
  linkProject String
  linkGitRepo String
}

type Skill {
  skill1 String
}

type Template {
  id        String
  name      String
  url       String
  createdAt DateTime
  updatedAt DateTime
}
